<h1><%= link_to "What's your current Projects?", "http://github.com/#{params[:username]}" %>
	<span></h1>
	<%= link_to "Sign in with GitHub", "github.com" %>	to find out
		
		
<%- if @repos%>
<ul>
  <%- @repos.reverse_each do |repo| %>
  <li>
    <%= link_to repo[:name], repo[:url] %>
    <span class="desc"><%= truncate(repo[:description], :length => 45) %></span>
    
    <%- if repo[:pushed_at] > 4.months.ago %>
      <span class="right green">ONGOING</span>
    <% else %>
      <span class="right red">ON HOLD</span>
    <% end %>
  </li>
  <% end %>
</ul>
<% end %>

<div id="footer">
  Lovingly created by <%= link_to "Chris Oliver", "http://excid3.com" %>
  Fork'd from <%= link_to "excid3", "http://github.com/excid3" %>
</div>
